<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_track"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/track_color"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="15dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_of_track_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Track"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/cover2" />


        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/track_bio_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feed_item_status_pad_left_right"
            android:paddingTop="@dimen/feed_item_status_pad_top"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:paddingBottom="5dp"
            android:text="@string/bio_profile3"
            app:trimCollapsedText="Show less"
            app:trimExpandedText="Show more"
            app:trimLength="105"
            app:trimMode="trimModeLength" />



        <TextView
            android:id="@+id/track_Rate_screen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feed_item_status_pad_left_right"
            android:text="Rate: 30%"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>

